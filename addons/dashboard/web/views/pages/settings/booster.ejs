<div class="container-fluid mt-5">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">üöÄ Booster Settings</h2>
                    <p class="text-muted mb-0">Configure server boost log channel and custom messages</p>
                </div>
                <div>
                    <a href="/dashboard/<%= guildId %>/settings" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Settings
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    <% if (query.success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            Booster settings saved successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    <% if (query.error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            Error saving booster settings. Please try again.
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <form method="POST" action="/dashboard/<%= guildId %>/settings/booster">
        <div class="row">
            <!-- Boost Log Channel -->
            <div class="col-lg-6 mb-4">
                <div class="card glass-effect h-100">
                    <div class="card-header">
                        <h5 class="mb-0">üöÄ Boost Log Channel</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="boostLogChannelId" class="form-label">Boost Log Channel</label>
                            <select class="form-select" id="boostLogChannelId" name="boostLogChannelId">
                                <option value="">Select a channel...</option>
                                <% channels.text.forEach(channel => { %>
                                    <option value="<%= channel.id %>" <%= settings.boostLogChannelId === channel.id ? 'selected' : '' %>>
                                        #<%= channel.name %>
                                    </option>
                                <% }); %>
                            </select>
                            <div class="form-text">Channel where boost notifications will be sent</div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> This channel will receive notifications when members boost your server.
                        </div>
                    </div>
                </div>
            </div>

            <!-- Current Boost Log Channel -->
            <div class="col-lg-6 mb-4">
                <div class="card glass-effect h-100">
                    <div class="card-header">
                        <h5 class="mb-0">üìä Current Boost Log Channel</h5>
                    </div>
                    <div class="card-body">
                        <h6 class="text-muted mb-3">Active Channel</h6>
                        <% if (settings.boostLogChannelId) { %>
                            <% const boostChannel = channels.text.find(c => c.id === settings.boostLogChannelId); %>
                            <% if (boostChannel) { %>
                                <div class="d-flex align-items-center mb-3">
                                    <i class="fas fa-hashtag text-primary me-2"></i>
                                    <span class="fw-bold">#<%= boostChannel.name %></span>
                                    <span class="badge bg-success ms-2">Active</span>
                                </div>
                            <% } else { %>
                                <div class="d-flex align-items-center mb-3">
                                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                                    <span class="text-muted">Channel not found</span>
                                    <span class="badge bg-warning ms-2">Invalid</span>
                                </div>
                            <% } %>
                        <% } else { %>
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-times text-muted me-2"></i>
                                <span class="text-muted">Not configured</span>
                                <span class="badge bg-secondary ms-2">None</span>
                            </div>
                        <% } %>

                        <div class="alert alert-warning mt-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Reminder:</strong> Don't forget to enable the Boost Log feature in the Features settings!
                        </div>
                    </div>
                </div>
            </div>

            <!-- Boost Log Message -->
            <div class="col-12 mb-4">
                <div class="card glass-effect h-100">
                    <div class="card-header">
                        <h5 class="mb-0">üí¨ Custom Boost Message</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="boostLogMessage" class="form-label">Boost Log Message</label>
                            <textarea 
                                class="form-control" 
                                id="boostLogMessage" 
                                name="boostLogMessage" 
                                rows="4" 
                                placeholder="Thank you so much, **{displayName}**! Thanks to you, our server just got even cooler!"
                            ><%= settings.boostLogMessage || '' %></textarea>
                            <div class="form-text">Custom message to send when someone boosts the server</div>
                        </div>

                        <div class="alert alert-primary">
                            <i class="fas fa-lightbulb me-2"></i>
                            <strong>Available Placeholders:</strong>
                            <ul class="mb-0 mt-2">
                                <li><code>{username}</code> - User's username</li>
                                <li><code>{displayName}</code> - User's display name</li>
                                <li><code>{mention}</code> - Mention the user</li>
                                <li><code>{tag}</code> - User's tag (username#discriminator)</li>
                                <li><code>{servername}</code> - Server name</li>
                                <li><code>{membercount}</code> - Total member count</li>
                                <li><code>{boostcount}</code> - Total boost count</li>
                                <li><code>{boostlevel}</code> - Server boost level</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Message Preview -->
            <div class="col-12 mb-4">
                <div class="card glass-effect h-100">
                    <div class="card-header">
                        <h5 class="mb-0">üëÅÔ∏è Message Preview</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-secondary">
                            <h6 class="mb-3">Example Output:</h6>
                            <div class="border-start border-primary border-3 ps-3">
                                <% 
                                    let previewMessage = settings.boostLogMessage || "Thank you so much, **{displayName}**! Thanks to you, our server just got even cooler!";
                                    previewMessage = previewMessage
                                        .replace(/{username}/g, user.username)
                                        .replace(/{displayName}/g, user.globalName || user.username)
                                        .replace(/{mention}/g, `@${user.username}`)
                                        .replace(/{tag}/g, `${user.username}#${user.discriminator || '0000'}`)
                                        .replace(/{servername}/g, guild.name)
                                        .replace(/{membercount}/g, guild.memberCount || '0')
                                        .replace(/{boostcount}/g, guild.premiumSubscriptionCount || '0')
                                        .replace(/{boostlevel}/g, guild.premiumTier || '0');
                                %>
                                <%= previewMessage %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Boost Log Information -->
            <div class="col-12 mb-4">
                <div class="card glass-effect h-100">
                    <div class="card-header">
                        <h5 class="mb-0">‚ÑπÔ∏è Boost Log Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-3">Features</h6>
                                <ul class="list-unstyled">
                                    <li><i class="fas fa-check text-success me-2"></i>Automatic boost detection</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Custom thank you messages</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Placeholder support</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Real-time notifications</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted mb-3">Requirements</h6>
                                <ul class="list-unstyled">
                                    <li><i class="fas fa-info-circle text-info me-2"></i>Must be a text channel</li>
                                    <li><i class="fas fa-info-circle text-info me-2"></i>Bot needs Send Messages permission</li>
                                    <li><i class="fas fa-info-circle text-info me-2"></i>Bot needs Embed Links permission</li>
                                    <li><i class="fas fa-info-circle text-info me-2"></i>Feature must be enabled</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Save Button -->
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Settings
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
